{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist-app",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["app/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
