{
  "name": "pawnbutler",
  "version": "1.0.0",
  "description": "Safe personal AI agent system with strict guardrails",
  "main": "dist-app/app/main/main.js",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "start": "node --loader ts-node/esm src/index.ts start",
    "dev": "node --loader ts-node/esm src/index.ts",
    "app:compile": "tsc -p tsconfig.app.json && cp app/renderer/index.html app/renderer/styles.css dist-app/app/renderer/",
    "app:dev": "npm run app:compile && electron .",
    "app:build": "npm run app:compile && electron-builder --mac",
    "app:dmg": "npm run app:compile && electron-builder --mac dmg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paduck86/pawnbutler.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/paduck86/pawnbutler/issues"
  },
  "homepage": "https://github.com/paduck86/pawnbutler#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.73.0",
    "@google/generative-ai": "^0.24.1",
    "@slack/bolt": "^4.6.0",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.6.2",
    "cheerio": "^1.2.0",
    "commander": "^14.0.3",
    "croner": "^10.0.1",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.4",
    "grammy": "^1.39.3",
    "openai": "^6.18.0",
    "playwright-core": "^1.58.1",
    "tslog": "^4.10.2",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "vitest": "^4.0.18"
  }
}
